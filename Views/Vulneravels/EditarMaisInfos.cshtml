        <div class="form-container2">
            <p>Tem algum tipo de deficiência mental ? Caso sim descreva:</p>
            <div class="form-container">
                <div class="form-group form-Box3">
                    @{
                        var validationMental = "";
                        var validationMentalNo = "";
                        var validationDisabledMental = false;
                        if (Model.deficienciaMentalRadio == "yes")
                        {
                            validationMental = "checked='checked'";
                            validationDisabledMental = true;
                        }
                        else
                        {
                            validationMentalNo = "checked='checked'";
                        }
                    }
                    <input @validationMental
                           id="deficienciaMentalRadio"
                           name="deficienciaMentalRadio"
                           type="radio"
                           value="yes"
                           onclick="showDescriptionMental()" />
                    <p>Sim</p>
                    <input @validationMentalNo
                           id="deficienciaMentalRadio"
                           name="deficienciaMentalRadio"
                           type="radio"
                           value="no"
                           onclick="hideDescriptionMental()" />
                    <p>Não</p>

                </div>
                <div class="form-group form-Box4">

                    @{
                        if (validationDisabledMental == true)
                        {
                            @Html.EditorFor(model => model.deficienciaMentalText, new { htmlAttributes = new { @class = "form-control newform-control", @placeholder = "Descrição" } })
                        }
                        else
                        {
                            @Html.EditorFor(model => model.deficienciaMentalText, new { htmlAttributes = new { @class = "form-control newform-control", @placeholder = "Descrição", @Disabled = "disabled" } })
                        }
                    }

                    @Html.ValidationMessageFor(model => model.deficienciaMentalText, "", new { @class = "text-danger mensagem-erro" })
                </div>
